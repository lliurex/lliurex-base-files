#!/bin/sh
# preinst script for lliurex-base-files
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

PKG="lliurex-base-files"
ORIGINAL_XDG_USER_DIRS_AUTOSTART="/etc/xdg/autostart/xdg-user-dirs.desktop"
NEW_DIVERTED_FILE="/etc/xdg/autostart/xdg-user-dirs.desktop.old"

case "$1" in
    install|upgrade)
	rc=0
	dpkg-divert --list | grep $PKG | grep -q xdg-user-dirs.desktop && rc=1 || rc=0
	if [[ "$rc" == "0" ]]; then
		dpkg-divert --add --package ${PKG} --rename --divert "$NEW_DIVERTED_FILE" "$ORIGINAL_XDG_USER_DIRS_AUTOSTART"
	then
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
